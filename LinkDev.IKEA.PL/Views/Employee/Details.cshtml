
@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>

@* Bootstrab Tabs *@
<ul class="nav nav-tabs mt-2" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General Information</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="admin-tab" data-bs-toggle="tab" data-bs-target="#admin" type="button" role="tab" aria-controls="admin" aria-selected="false">Administration Informaiton</a>
    </li>
</ul>


<div class="tab-content" id="myTabContent">
    @*     Genral Tab Content *@
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="home-tab">
        <div class action="row">

            <div class="form-group col-6 mb-3">
                <label asp-for="Name" class="formInput"></label>
                <input asp-for="Name" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Email" class="formInput"></label>
                <input asp-for="Email" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Age" class="formInput"></label>
                <input asp-for="Age" class="form-control" readonly>
            </div>

            <div class="form-group col-6 mb-3">
                <label asp-for="Address" class="formInput"></label>
                <input asp-for="Address" class="form-control" readonly>
            </div>
            <div class="form-group col-6 mb-3">
                <label asp-for="IsActive" class="formInput"></label>
                <input asp-for="IsActive" class="form-control" readonly>
            </div>
            <div class="form-group col-6 mb-3">
                <label asp-for="Salary" class="formInput"></label>
                <input asp-for="Salary" class="form-control" readonly>
            </div>
            <div class="form-group col-6 mb-3">
                <label asp-for="Gender" class="formInput"></label>
                <input asp-for="Gender" class="form-control" readonly>
            </div> 
            <div class="form-group col-6 mb-3">
                <label asp-for="EmployeeType" class="formInput"></label>
                <input asp-for="EmployeeType" class="form-control" readonly>
            </div>

        </div>
    </div>

    @*     Admin Tab Content *@
    <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="profile-tab">


        <div class="form-group col-6 mb-3">
            <label asp-for="CreatedOn" class="formInput"></label>
            <input asp-for="CreatedOn" class="form-control" readonly>
        </div>

        <div class="form-group col-6 mb-3">
            <label asp-for="CreatedBy" class="formInput"></label>
            <input asp-for="CreatedBy" class="form-control" readonly>
        </div>

        <div class="form-group col-6 mb-3">
            <label asp-for="LastModidiedOn" class="formInput"></label>
            <input asp-for="LastModidiedOn" class="form-control" readonly>
        </div>

        <div class="form-group col-6 mb-3">
            <label asp-for="LastModidiedBy" class="formInput"></label>
            <input asp-for="LastModidiedBy" class="form-control" readonly>
        </div>


    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-dark">Back To List</a>
    </div>
</div>