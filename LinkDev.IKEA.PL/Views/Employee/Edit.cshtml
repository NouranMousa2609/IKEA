@inject IDepartmentService _departmentService
@model UpdatedEmployeeDto
@{
    ViewData["Title"] = "Edit";
    var Departments = new SelectList(_departmentService.GetAllDeparments(), nameof(DepartmentDto.Id), nameof(DepartmentDto.Name));

}

<div class="row justify-content-center align-items-center flex-column">
    <h1 class="col-6 mt-4">Edit Employee </h1>
    <form asp-action="Edit" class=" col-6">
        <div asp-validation-summary="All"></div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class=" text-danger"></span>
        </div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class=" text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label mb-2 " asp-for="DepartmentId"></label>
            <select asp-for="DepartmentId" asp-items="@Departments" class="col-form-label">
                <option value="@null"> Choose...</option>
            </select>
        </div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class=" text-danger"></span>
        </div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="HiringDate"></label>
            <input type="date" asp-for="HiringDate" class="form-control" />
            <span asp-validation-for="HiringDate" class=" text-danger"></span>
        </div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class=" text-danger"></span>
        </div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class=" text-danger"></span>
        </div>
        <div class=" input-group mt-3">
            <label class=" form-label" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class=" text-danger"></span>
        </div>
        <div class=" form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label class=" form-check-label" asp-for="IsActive"></label>
        </div>

        <label class="control-label mb-2 " asp-for="Gender"></label> <br />
        @foreach (Gender genderoption in Enum.GetValues(typeof(Gender)))
        {
            <div class=" form-check">
                <input type="radio" class="form-check-input" asp-for="Gender" value="@genderoption">
                <label class="form-check-label" asp-for="Gender">
                    @genderoption

                </label>

            </div>
        }

        <div class="form-group">
            <label class="control-label mb-2 " asp-for="EmployeeType"></label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmpType>()" class="col-form-label">
                <option value=""> Choose...</option>
            </select>


            <div class="mt-3 ">
                <input type="submit" value="Save" class="btn btn-primary" />

                <a asp-action="Index" class="btn btn-light">Back To List </a>
            </div>


    </form>

</div>

@section ValidationScript {
    <partial name="_ValidationScriptsPartial" />
}